    "@types/express": "^5.0.4",
    "@types/node": "^20.11.30",
    "@types/nodemailer": "^7.0.3",
    "prisma": "^6.18.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.6.3"
  }
}


generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ... bestehende Models

enum ReservationStatus {
  confirmed
  canceled
  no-show
}

model Reservation {
  id           String             @id
  firstName    String
  name         String
  email        String
  phone        String?
  date         String             // YYYY-MM-DD
  time         String             // HH:MM
  guests       Int
  notes        String?
  status       ReservationStatus  @default(confirmed)
  isWalkIn     Boolean            @default(false)
  createdAt    DateTime           @default(now())
  cancelToken  String
  reminderSent Boolean            @default(false)
  startTs      DateTime
  endTs        DateTime
}

model Notice {
  id         String   @id
  date       String   // YYYY-MM-DD
  title      String?
  message    String
  requireAck Boolean  @default(false)
  active     Boolean  @default(true)
  createdAt  DateTime @default(now())
}

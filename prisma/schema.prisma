// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ReservationStatus {
  confirmed
  canceled
  noshow
}

model Reservation {
  id            String             @id @default(cuid())
  date          String             // YYYY-MM-DD
  time          String             // HH:mm
  startTs       DateTime
  endTs         DateTime
  firstName     String
  name          String
  email         String
  phone         String
  guests        Int
  notes         String?
  status        ReservationStatus  @default(confirmed)
  cancelToken   String             @unique
  isWalkIn      Boolean            @default(false)
  reminderSent  Boolean            @default(false)
  createdAt     DateTime           @default(now())

  @@index([startTs])
  @@index([endTs])
  @@index([date])
  @@index([email])
  @@index([status])
}

model Closure {
  id        String   @id @default(cuid())
  startTs   DateTime
  endTs     DateTime
  reason    String
  createdAt DateTime @default(now())

  @@index([startTs])
  @@index([endTs])
}

model Notice {
  id        String   @id @default(cuid())
  date      String   // YYYY-MM-DD
  message   String
  createdAt DateTime @default(now())

  // exakt eine Notice pro Datum
  @@unique([date])
}

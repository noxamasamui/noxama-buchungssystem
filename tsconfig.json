{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "rootDir": ".",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "sourceMap": false,
    "declaration": false
  },
  "include": [
    "server.ts",
    "src/**/*",
    "src/**/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
